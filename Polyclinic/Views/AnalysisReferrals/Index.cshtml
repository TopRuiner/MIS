@model IEnumerable<Polyclinic.Models.AnalysisReferral>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Направления на анализ</h1>
@if (this.User.IsInRole("Doctor") || this.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Создать</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assistant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.СabinetNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnosis.ReturnIdAndDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.ReturnFIOAndSpeciality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.ReturnFIOAndBirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assistant.ReturnFIOAndBirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.СabinetNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                @if (this.User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
