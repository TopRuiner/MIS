@model Polyclinic.Models.ExaminationReferral

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ExaminationReferral</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiagnosisId" class="control-label"></label>
                <select id="diagnoses" asp-for="DiagnosisId" class="form-control" asp-items="@ViewBag.Diagnoses"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <input asp-for="DoctorId" class="form-control" value="@ViewData["DoctorId"]" readonly />

            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <select id="patients" asp-for="PatientId" class="form-control" asp-items="@ViewBag.Patients"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FunctionalDiagnosticsDoctorId" class="control-label"></label>
                <select id="functionalDiagnosticsDoctors" asp-for="FunctionalDiagnosticsDoctorId" class="form-control" asp-items="@ViewBag.FunctionalDiagnosticsDoctors"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="СabinetNum" class="control-label"></label>
                <input asp-for="СabinetNum" class="form-control" />
                <span asp-validation-for="СabinetNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
        <link href="https://raw.githack.com/ttskch/select2-bootstrap4-theme/master/dist/select2-bootstrap4.css" rel="stylesheet">
        <script>
            $(document).ready(function () {
                $("#diagnoses").select2({
                    placeholder: "Выбирете предварительный диагноз",
                    theme: "bootstrap4",
                    allowClear: true
                });
            });
        </script>
        <script>
            $(document).ready(function () {
                $("#patients").select2({
                    placeholder: "Выбирете пациента",
                    theme: "bootstrap4",
                    allowClear: true
                });
            });
        </script>
        <script>
            $(document).ready(function () {
                $("#functionalDiagnosticsDoctors").select2({
                    placeholder: "Выбирете врача функциональной диагностики",
                    theme: "bootstrap4",
                    allowClear: true
                });
            });
        </script>
}
